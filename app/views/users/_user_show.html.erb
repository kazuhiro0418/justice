<div class="card">
  <div class="card-header">
    <h4><%= user.name %></h4>
  </div>
  <div class="card-body">
    <div class="row">
      <div class="col-1">
        <% if user.image_url.present? %>
          <%= image_tag user.image_url, class: "resize_image" %>
        <% end %>
      </div>
      <div class="col-11">
        <p class="card-text"><%= simple_format(user.body) %></p>
      </div>
    </div>
    <p class="text-right font-weight-bold mr-10"><%= user.email %></p>
  </div>
</div> 

<style>
  .resize_image {
    width: 75px;
    height: 75px;
    object-fit: cover;
    border-radius: 50%;
    padding: 2px;
    border: 2px solid #333300;
  }
</style>
