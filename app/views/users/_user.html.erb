<tr>
  <td><%= user.id %></td>
  <td><%= user.name %></td>
  <td>
    <% if user.image_url.present? %>
      <%= image_tag user.image_url, class: "resize_image" %>
    <% end %>
  </td>
  <td><%= user.body %></td>
  <td><%= user.boards.count %></td>
  <td><%= user.comments.count %></td>
  <td><%= user.email %></td>
  <td><%= user.created_at.to_s(:datetime) %></td>
  <td><%= user.updated_at.to_s(:datetime) %></td>
  <td><%= link_to '詳細', user_path(id: user.id) , class: "btn btn-outline-dark" %></td>
  <td><%= link_to '削除', user_path(id: user.id) , class: "btn btn-danger", method: :delete %></td> 
</tr>

<style>
  .resize_image {
    width: 75px;
    height: 75px;
    object-fit: cover;
    border-radius: 50%;
    padding: 2px;
    border: 2px solid #333300;
  }
</style>
