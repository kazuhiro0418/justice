<div class="d-flex align-items-center">
  <h1>ユーザー一覧</h1>
  <div class="ml-auto boards__linkBox">
    <%= link_to 'ユーザー作成', new_user_path, class: "btn btn-outline-dark" %>
  </div>
</div>
<% if flash[:notice] %>
  <div class="alert alert-danger"><%= flash[:notice] %></div>
<% end %>
<table class="table table-hover boards__table">
  <thead class="thead-dark">
    <tr>
      <th>ID</th>
      <th>名前</th>
      <th>アイコン</th>
      <th>ひと言</th>
      <th>投稿数</th>
      <th>コメント数</th>
      <th>メールアドレス</th>
      <th>作成日時</th>
      <th>更新日時</th>
      <th></th>
      <th></th> 
    </tr>
  </thead>
  <tbody>
    <%= render @users %>
  </tbody>
</table>
<%= paginate @users %>
